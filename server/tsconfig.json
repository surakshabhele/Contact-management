{
  "extends": "../node_modules/adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./server/app/*"
      ],
      "Config/*": [
        "./server/config/*"
      ],
      "Contracts/*": [
        "./server/contracts/*"
      ],
      "Database/*": [
        "./server/database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "adonis5-jwt",
      "@adonisjs/bouncer"
    ]
  }
}
